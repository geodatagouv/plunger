{
  "name": "plunger",
  "version": "2.3.3",
  "description": "Powerful link analyzer",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/geodatagouv/plunger"
  },
  "author": "Jérôme Desboeufs <jerome.desboeufs@data.gouv.fr>",
  "license": "MIT",
  "scripts": {
    "test": "jest --detectOpenHandles"
  },
  "files": [
    "bin/",
    "lib/",
    "index.js"
  ],
  "dependencies": {
    "bluebird": "^3.5.1",
    "chalk": "^2.3.2",
    "content-disposition": "^0.5.2",
    "content-type": "^1.0.2",
    "debug": "^3.1.0",
    "decompress-response": "^3.3.0",
    "execa": "^0.11.0",
    "feedparser": "^2.2.9",
    "file-type": "^9.0.0",
    "get-stream": "^4.0.0",
    "hasha": "^3.0.0",
    "htmlparser2": "^3.9.2",
    "mime-types": "^2.1.18",
    "mississippi": "^3.0.0",
    "normalize-url": "^3.0.1",
    "read-chunk": "^2.1.0",
    "rfc2047": "^2.0.1",
    "rimraf": "^2.6.1",
    "type-is": "^1.6.16"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "finalhandler": "^1.1.1",
    "jest": "^23.5.0",
    "jest-junit": "^5.1.0",
    "serve-static": "^1.13.2",
    "test-listen": "^1.1.0",
    "xo": "^0.22.0"
  },
  "engines": {
    "node": ">=8.x"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__helpers__/",
      "/__fixtures__/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "reports/tests/junit.xml"
        }
      ]
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "index.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "forceExit": true
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "env": [
          "jest"
        ]
      }
    ]
  }
}
